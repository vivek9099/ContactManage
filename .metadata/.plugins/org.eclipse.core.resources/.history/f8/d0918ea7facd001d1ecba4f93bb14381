package com.app.controller;

import java.util.ArrayList;
import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.app.model.User;



@RestController
public class UserController {
	
	
	
	//http://localhost:8080/user
	@GetMapping("/user")
	public User getUser() {
		return new User (1,"Vivek","Mishra","viv@gmail.com","9849788973");
	}
	
	@GetMapping("/user")
	public List<User> getUsers(){
		List<User> users = new ArrayList<>();
		users.add(new User(1,"Vivek","Mishra","viv@gmail.com","9849788973"));
		users.add(new User(2,"Vivek","Mishra","viv@gmail.com","9849788973"));
		users.add(new User(3,"Vivek","Mishra","viv@gmail.com","9849788973"));
		users.add(new User(4,"Vivek","Mishra","viv@gmail.com","9849788973"));
		users.add(new User(5,"Vivek","Mishra","viv@gmail.com","9849788973"));
		return users;
	}

}
